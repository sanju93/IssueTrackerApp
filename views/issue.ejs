<link rel="stylesheet" href = "/css/home.css">
<div class="h2">Create Issue</div>


<div class="container my-5">
    <div class="h3">Add Issue</div>
    <form action = "/create_issue" method="post">
    <div class="row">
     
        <div col="12">
            <div class="p my-2">Description</div>
            <input type = "text" name = "desc" class="form-control">
        </div> 

    </div>

    <div class="row">
     
        <div col="12">
            <div class="p my-2">Severity</div>
            <select class="form-select" name="severity" aria-label="Default select example">
                <option selected>select the severity</option>
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
              </select>
        </div> 

    </div>

    <div class="row">
     
        <div col="12">
            <div class="p my-2">Assigned To</div>
            <input type = "text" name = "assign" class="form-control">
        </div> 

    </div>

    <div class="row">
         <div class="col-2 my-4"> <input type = "submit" value = "Add" class = "btn btn-primary"></div>
    </div>
    </form>


</div>